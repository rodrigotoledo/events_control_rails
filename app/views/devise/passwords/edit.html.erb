<div class="max-w-md mx-auto mt-8">
  <h2 class="text-2xl font-semibold mb-6">Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div>
      <%= f.label :password, "New password", class: "block font-medium text-sm text-gray-700" %><br />
      <% if @minimum_password_length %>
        <span class="text-xs text-gray-600">(<%= @minimum_password_length %> characters minimum)</span><br />
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 block w-full rounded-md border-gray-400 shadow-sm focus:border-gray-400 focus:ring focus:ring-gray-200 focus:ring-opacity-50 p-2" %>
    </div>

    <div>
      <%= f.label :password_confirmation, "Confirm new password", class: "block font-medium text-sm text-gray-700" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 block w-full rounded-md border-gray-400 shadow-sm focus:border-gray-400 focus:ring focus:ring-gray-200 focus:ring-opacity-50 p-2" %>
    </div>

    <div>
      <%= f.submit "Change my password", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-gray-600 hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
